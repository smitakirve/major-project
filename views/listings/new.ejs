<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Create a new listing</h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-lable" >Title</lable>
            <input name="listing[title]" placeholder="Add a title" type="text" class="form-control" required />
            <div class="valid-feedback">Title looks good </div>
            <div class="invalid-feedback">
                Please choose a username.
              </div>
        </div>

        <div class="mb-3">
            <lable for="description" class="form-lable">Description</lable> 
            <textarea name="listing[description]"  class="form-control" required></textarea>
        </div>
           
        <!-- <div class="mb-3">
            <lable for="image" class="form-lable">Image</lable> 
            <input name="listing[image]" placeholder="enter image URL" type="text" class="form-control"/>
        </div> -->
        
        <div class="mb-3">
            <lable for="image" class="form-lable">Upload Image</lable> 
            <input name="listing[image]"  type="file" class="form-control"/>
        </div>

        <div class="row">
            <div class="mb-3 col-4">
                <lable for="price" class="form-lable">Price</lable>
                <input name="listing[price]" placeholder="24000" type="number" class="form-control" required/>
                <div class="invalid-feedback"> please enter valid data </div> 
            </div>

            <div class="mb-3 col-md-8">
                <lable for="country" class="form-lable">Country</lable> 
                <input name="listing[country]" placeholder="INDIA" type="text" class="form-control" required/>
                <div class="invalid-feedback"> please enter valid data </div> 
            </div>
        </div>
       

        <div class="mb-3">
            <lable for="location" class="form-lable">Location</lable> 
            <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required/>
            <div class="invalid-feedback"> please enter valid data </div> 
        </div>
        
        <button class="btn btn-dark add-btn mt-3" type="submit">submit</button>
        <br></br>
    </form>
  </div>
</div>
</body>
